<div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">


<%= render 'books/haeder',user: @user, book: @book %>

<%= render 'books/footer',book: @book_new %>
  </div>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table table-hover table-inverse">
    <thaed>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
  </thaed>
  <tbody>
    <tr>
      <td>
          <% if @book.user.profile_image.attached? %>
          <%= link_to   user_path(@book.user.id) do %>
          <%= image_tag @book.user.profile_image, size: "100x100" %></br>
              <%= @book.user.name %>
        <% end %>
        <% else %>
          <%= link_to user_path(@book.user.id) do %>
          <%= image_tag 'no_image', size: "100x100" %></br>
              <%= @book.user.name %>
        <% end %>
        <% end %>

      </td>
      <td><%= link_to @book.title,book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <td>
        <% if @book.user == current_user %>
           <i class="btn btn-sm btn-success">
             <%= link_to "Edit", edit_book_path(@book.id) %>
            </i>
        <% end %>
      </td>
      <td>
        <% if @book.user == current_user %>
         <i class="btn btn-sm btn-danger">
          <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" =>"本当に消しますか？" %>
         </i>

        <% end %>
      </td>
    </tr>

  </tbody>
  </table>
  </div>
  </div>
  </div>

</main>
