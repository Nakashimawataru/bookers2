


<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/haeder',user: @user, book: @book_new %>
      <%= render 'books/footer',book: @book_new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover teble-inversw">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @user.books.each do |book| %>
            <tr>
              <td>
                <% if book.user.profile_image.attached? %>
                  <%= link_to   user_path(book.user.id) do %>
                    <%= image_tag book.user.profile_image, size: "100x100" %>
                  <% end %>
                <% else %>
                  <%= link_to user_path(book.user.id) do %>
                    <% image_tag 'no_image', size: "100x100" %>
                  <% end %>
                <% end %>
              </td>
              <td><%= link_to book.title,book_path(book.id) %></td>
              <td><%= book.body %></td>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>





  </div>
</div>